<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container">
    <a class="navbar-brand fw-bold" href="<%= lists_path %>">
      <i class="fa-solid fa-video me-2"></i>
      Curated Cinematics
    </a>
    <div class="d-flex ms-auto">
      <%= link_to "Home", lists_path, class: "btn btn-outline-light me-2" %>
      <%= link_to "Create New List", new_list_path, class: "btn btn-outline-light" %>
    </div>
  </div>
</nav>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <%= image_tag @movie.poster_url, class: "card-img-top", alt: @movie.title %>
        <div class="card-body">
          <h1 class="card-title display-5 fw-bold"><%= @movie.title %></h1>
          <p class="card-text"><strong>Overview:</strong> <%= @movie.overview %></p>
          <p class="card-text"><strong>Rating:</strong> <%= @movie.rating %>/10</p>
          <div class="mt-3">
            <%= link_to "Back to List", list_path(@list), class: "btn btn-secondary" %>
          </div>
          <% if @bookmark %>
            <div class="mt-3">
              <%= link_to "Remove from List", list_bookmark_path(@list, @bookmark),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this movie?" },
                  class: "btn btn-danger me-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
