<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container">
    <a class="navbar-brand fw-bold" href="<%= lists_path %>">
      <i class="fa-solid fa-video me-2"></i>
      Curated Cinematics
    </a>
    <div class="d-flex ms-auto">
      <%= link_to "Home", lists_path, class: "btn btn-outline-light me-2" %>
      <%= link_to "Create New List", new_list_path, class: "btn btn-outline-light" %>
    </div>
  </div>
</nav>
<div class="container mt-5 pt-5">
  <h1 class="display-4 fw-bold mb-2 text-center"><%= @list.name %></h1>
  <h2 class="h4 text-muted mb-4 text-center">Movies in this list:</h2>
  <% if @bookmarks.any? %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% @bookmarks.each do |bookmark| %>
        <div class="col">
          <%= link_to list_movie_path(@list, bookmark.movie), class: "text-decoration-none text-dark" do %>
            <div class="card h-100">
              <!-- Poster image -->
              <%= image_tag bookmark.movie.poster_url, class: "card-img-top movie-card-img", alt: bookmark.movie.title %>
              <!-- Card body with title, description, comment, and rating -->
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <h5 class="card-title mb-0 text-truncate" style="max-width: 75%;">
                    <strong><%= bookmark.movie.title %></strong>
                  </h5>
                  <small class="text-muted ms-2">
                    Rating: <%= number_with_precision(bookmark.movie.rating, precision: 1) %>
                  </small>
                </div>
                <p class="card-text"><%= truncate(bookmark.movie.overview, length: 120) %></p>
                <% if bookmark.comment.present? %>
                  <p class="card-text"><strong>Comment:</strong> <%= bookmark.comment %></p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="mt-3 text-center">
      <%= link_to "Add another movie", new_list_bookmark_path(@list), class: "btn btn-primary me-2" %>
      <%= link_to "Back to all lists", lists_path, class: "btn btn-secondary" %>
    </div>
  <% else %>
    <p class="text-muted text-center">No movies in this list yet...</p>
    <div class="mt-3 text-center">
      <%= link_to "Add your first movie", new_list_bookmark_path(@list), class: "btn btn-primary me-2" %>
      <%= link_to "Back to all lists", lists_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
