<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container">
    <a class="navbar-brand fw-bold" href="<%= lists_path %>">
      <i class="fa-solid fa-video me-2"></i>
      Curated Cinematics
    </a>
    <div class="d-flex ms-auto">
      <%= link_to "Home", lists_path, class: "btn btn-outline-light me-2" %>
      <%= link_to "Create New List", new_list_path, class: "btn btn-outline-light" %>
    </div>
  </div>
</nav>
<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="col-md-6">
    <div class="card shadow-sm p-4">
      <h1 class="display-5 fw-bold mb-4 text-center">Create a New Movie List</h1>
      <%= simple_form_for @list do |f| %>
        <div class="mb-3">
          <%= f.input :name, label: "List Name", input_html: { class: "form-control" } %>
        </div>
        <div class="d-grid gap-2">
          <%= f.button :submit, "Create List", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="mt-3 text-center">
        <%= link_to "Back to lists", lists_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
